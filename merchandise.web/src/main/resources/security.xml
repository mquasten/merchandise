<beans xmlns="http://www.springframework.org/schema/beans"
  xmlns:security="http://www.springframework.org/schema/security"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://www.springframework.org/schema/beans
          http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
          http://www.springframework.org/schema/security
          http://www.springframework.org/schema/security/spring-security-3.1.xsd">
   
 
    <security:http entry-point-ref="entryPoint"  use-expressions="true"  >
    		<security:intercept-url  pattern="/overview.*" access="hasAnyRole('Bids','Demands','Opportunities')" />	
    </security:http>
    
  
  <security:authentication-manager>
       <security:authentication-provider ref="authentificationprovider" />
  </security:authentication-manager>  
 
 <bean name ="authentificationprovider" class="de.mq.merchandise.customer.support.AuthentificationServiceImpl" />
  
  <bean name="entryPoint" class="de.mq.merchandise.customer.support.SimpleAuthenticationEntryPointImpl" >
    <constructor-arg value="true"/>
  </bean>
    
  <bean id="securityContext" class="org.springframework.security.core.context.SecurityContextHolder"  factory-method="getContext" scope="prototype" />  
 <bean id="securityContextFactory" class="de.mq.merchandise.customer.support.SecurityContextFactory">
   <lookup-method name="securityContext" bean="securityContext" />
</bean> 
  




</beans>
